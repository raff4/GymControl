<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:d='urn:import:com.google.gwt.user.datepicker.client'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<g:HTMLPanel styleName="centeredDiv box gradientBackground2 width300 height400 padding5">
		<h1>Create a new account</h1>
		<g:Label>Username:</g:Label>
		<g:TextBox ui:field="username" />
		<g:Label>Password:</g:Label>
		<g:PasswordTextBox ui:field="password" />
		<g:Label>Confirm password:</g:Label>
		<g:PasswordTextBox ui:field="confirmPassword" />
		<g:Label>First name:</g:Label>
		<g:TextBox ui:field="firstname" />
		<g:Label>Last name:</g:Label>
		<g:TextBox ui:field="lastname" />
		<g:Label>email:</g:Label>
		<g:TextBox ui:field="email" />
		<g:Label>Date of birth:</g:Label>
		<d:DateBox ui:field="dob" />
		<span class="button">
			<g:Button ui:field="send">Send</g:Button>
		</span>
	</g:HTMLPanel>
</ui:UiBinder>
